<Window x:Class="BigDataProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BigDataProj"
        mc:Ignorable="d"
        Title="Sales Weather Analyzer"
        Height="500"
        Width="700"
        MinHeight="400"
        MinWidth="600"
        Background="#f8fafc"
        WindowStartupLocation="CenterScreen">

    <!-- Main Container -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="📊 Sales &amp; Weather Analyzer"
                     FontSize="24"
                     FontWeight="SemiBold"
                     Foreground="#1f2937"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
            <TextBlock Text="Analyze your sales data with weather insights"
                     FontSize="14"
                     Foreground="#6b7280"
                     HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    CornerRadius="12"
                    Padding="40"
                    MinWidth="500"
                    MaxWidth="900"
                    HorizontalAlignment="Center"
                    BorderBrush="#e5e7eb"
                    BorderThickness="1">

                <StackPanel>
                    <!-- Primary Action -->
                    <Button x:Name="ShowAnalyzedData"
                            Background="#10b981"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Medium"
                            Height="44"
                            Content="🔍 Show Analyzed Data"
                            Click="ShowAnalyzedData_Click"
                            Margin="0,0,0,30"/>

                    <!-- City Input -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="City Location"
               FontSize="14"
               FontWeight="Medium"
               Foreground="#374151"
               Margin="0,0,0,8"/>

                        <Grid>
                            <TextBox x:Name="CityTextBox"
                 Background="White"
                 BorderBrush="#d1d5db"
                 BorderThickness="1"
                 FontSize="14"
                 Padding="12,10"
                 Height="44"
                 Foreground="Black"
                 TextChanged="CityTextBox_TextChanged"/>

                            <TextBlock x:Name="PlaceholderText"
                   Text="Enter city name..."
                   Foreground="#9ca3af"
                   FontSize="14"
                   Padding="12,10"
                   VerticalAlignment="Top"
                   IsHitTestVisible="False"
                   Visibility="Visible"/>
                        </Grid>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel>
                        <Button x:Name="importSalesDataIntoSQL"
                                Background="#6b7280"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Medium"
                                Height="44"
                                Click="ImportCsvButton_Click"
                                Content="📁 Choose Sales Data File"
                                Margin="0,0,0,15"
                                ToolTip="Import your sales data CSV file (requires: Id, Date, Product, Quantity, Total columns)"/>

                        <Button x:Name="ShowTableWithData"
                                Background="#6b7280"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Medium"
                                Height="44"
                                Content="📋 Show Sales Data"
                                Click="ShowTableWithData_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>